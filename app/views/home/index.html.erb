<div class="flex flex-row">
    <div class="grid grid-cols-2 grow gap-12 pr-12 basis-0">
        <% [3, 2, 4, 5].each do |count| %>
            <section>
                <h1 class="text-3xl">Latest events</h1>
                <div class="h-4"></div>
                <ul>
                    <% for i in 1..count do %>
                        <a href="/clears?somefilter=123">
                            <li>
                                <img
                                    src="https://prts.wiki/images/thumb/3/3e/%E6%B4%BB%E5%8A%A8%E9%A2%84%E5%91%8A_%E6%98%A5%E5%88%86_01.jpg/650px-%E6%B4%BB%E5%8A%A8%E9%A2%84%E5%91%8A_%E6%98%A5%E5%88%86_01.jpg"
                                    alt=""
                                    class="w-full"
                                >
                            </li>
                        </a>
                        <div class="h-4"></div>
                    <% end %>
                </ul>
            </section>
        <% end %>
    </div>
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th colspan="3">
                        Latest clears
                    </th>
                </tr>
                <tr>
                    <th>Event</th>
                    <th>Operators</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for i in 1..6 do %>
                <tr class="border-t hover cursor-pointer" onclick="window.open('/clears/')">
                    <td>
                        <span class="block">CB-EX7</span>
                        <span class="block text-sm">by fidela</span>
                    </td>
                    <td>
                        <div class="flex">
                            <% for i in 1..13 do %>
                            <img
                                src="https://raw.githubusercontent.com/Aceship/Arknight-Images/main/avatars/char_274_astesi.png"
                                alt=""
                                class="w-6 h-6 rounded-full"
                            >
                            <% end %>
                        </div>
                    </td>
                    <td>
                        <a href="https://www.youtube.com/" target="_blank" rel="noopener noreferrer">
                            <i class="fa-brands fa-youtube"></i>
                        </a>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </section>
</div>