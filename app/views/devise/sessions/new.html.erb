<div class="self-center flex flex-col justify-center h-5/6 sm:w-[28rem] w-full">
  <div class="flex flex-col justify-center items-center space-y-2 sm:border-primary-900 border-2 p-4 sm:p-16 rounded-lg sm:shadow-base border-none">
    <image src="/logo.svg"/ class="h-32">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-lg sm:text-2xl space-y-4 w-full flex flex-col items-center' }) do |f| %>
        <%= f.input :email, autofocus: true, autocomplete: 'email',
        label_html: { class: 'block' },
        input_html: { class: 'bg-primary-400 border-b-[1px] w-full ' },
        wrapper_html: { class: ' w-10/12 sm:w-full' }
      %>
        <%= f.input :password, autocomplete: 'current-password',
        label_html: { class: 'block' },
        input_html: { class: 'bg-primary-400 border-b-[1px] w-full' },
        wrapper_html: { class: ' w-10/12 sm:w-full' }
      %>
        <%- if devise_mapping.recoverable?%>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'self-end text-sm sm:text-base text-secondary-400 hover:underline' %><br />
        <% end %>
        <%= f.button :submit, "Log in", class: 'bg-secondary-900 w-10/12 sm:w-full p-2 rounded-lg hover:bg-secondary-400' %>
        <div class="text-base">
          Don't have an account? 
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-secondary-400 hover:underline' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
