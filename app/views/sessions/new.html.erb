<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<main class="card shadow-xl bg-base-200 sm:w-1/2 m-auto">
  <div class="card-body">
    <header>
      <h1 class="card-title">Sign in</h1>
    </header>

    <div class="h-4"></div>
    <%= form_with(url: sign_in_path) do |form| %>
      <%= form.email_field :email,
        value: params[:email_hint],
        autofocus: true,
        required: true,
        autocomplete: "email",
        placeholder: :email,
        class: "simple_form__input w-full"
      %>
      <div class="h-8"></div>
      <%= form.password_field :password,
        required: true,
        autocomplete: "current-password",
        placeholder: :password,
        class: "simple_form__input w-full"
      %>
      <div class="h-10"></div>
      <%= form.button "Sign in", class: "simple_form__btn w-full" %>
    <% end %>

    <div class="sm:flex justify-between">
      <%= link_to "Sign up", sign_up_path, class: "block" %>
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "block"  %>
    </div>
  </div>
</main>
