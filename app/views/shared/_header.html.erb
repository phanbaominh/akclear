<header class="w-full flex bg-primary-900 text-white p-4 shadow-[0px_4px_4px_rgba(0, 0, 0, 0.25)]">
  <%= link_to root_path do%>
    <image src="/logo.svg"></image>
  <% end %>
  <nav class="flex">
    <ul class="flex text-xl">
      <li class="flex items-center"><%= link_to 'Videos', videos_path, class: 'hover:bg-primary-100 p-2 rounded-sm' %></li>
      <li class="flex items-center"><%= link_to 'Upload', new_video_path, class: 'hover:bg-primary-100 p-2 rounded-sm' %></li>
    </ul>
  </nav>
  <div class="grow"></div>
  <nav class="flex">
    <ul class="flex text-xl">
      <% if user_signed_in? %>
        <li class="flex items-center">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'hover:bg-primary-100 p-2 rounded-sm' %>
        </li>
      <% else %>
        <li class="flex items-center">
          <%= link_to 'Sign in', new_user_session_path, class: 'hover:bg-primary-100 p-2 rounded-sm' %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
