<% noindex %>
<div class="card shadow-xl bg-base-200 sm:w-1/2 m-auto">
  <div class="card-body">
    <header>
      <h2 class="card-title"><%= title t('meta.identity.password_resets.edit.title') %></h2>
    </header>
    <div class="h-4"></div>
    <%= simple_form_for(@user, url: identity_password_reset_path, method: :patch) do |form| %>
      <%= form.hidden_field :sid, value: params[:sid], name: :sid %>
      <div>
        <%= form.input :password,
                            label: false,
                            required: true,
                            autocomplete: "new-password",
                            placeholder: t(:password),
                            class: "simple_form__input w-full",
                            input_html: {
                              class: "w-full"
                            },
                            required: true %>
      </div>
      <div class="h-8"></div>
      <div>
        <%= form.input :password_confirmation,
                            label: false,
                            required: true,
                            autocomplete: "new-password",
                            placeholder: t(:password_confirmation),
                            class: "simple_form__input w-full",
                            input_html: {
                              class: "w-full"
                            },
                            required: true %>
      </div>
      <div class="h-10"></div>
      <div>
        <%= form.submit t(:save_changes), class: "simple_form__btn w-full" %>
      </div>
    <% end %>
  </div>
</div>
