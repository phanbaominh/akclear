<p style="color: red"><%= alert %></p>

<main class="card shadow-xl bg-base-200 sm:w-1/2 m-auto">
  <div class="card-body">
    <header>
      <h1 class="card-title">Forgot your password?</h1>
    </header>
    
    <div class="h-4"></div>
    <%= form_with(url: identity_password_reset_path) do |form| %>
      <%= form.email_field :email,
        autofocus: true,
        required: true,
        autocomplete: "email",
        placeholder: :email,
        class: "simple_form__input w-full"
      %>

      <div class="h-10"></div>
      <%= form.button "Send password reset email", class: "simple_form__btn w-full" %>
    <% end %>
  </div>
</main>