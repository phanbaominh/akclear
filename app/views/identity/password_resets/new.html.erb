<% noindex %>
<div class="card shadow-xl bg-base-200 sm:w-1/2 m-auto">
  <div class="card-body">
    <header>
      <h2 class="card-title"><%= title t('meta.identity.password_resets.new.title') %></h2>
    </header>
    <div class="h-4"></div>
    <%= form_with(url: identity_password_reset_path) do |form| %>
      <%= form.email_field :email,
        autofocus: true,
        required: true,
        autocomplete: "email",
        placeholder: t(:email),
        class: "simple_form__input w-full"
      %>
      <div class="h-10"></div>
      <%= form.button t(:send_password_reset_email), class: "simple_form__btn w-full" %>
    <% end %>
  </div>
</div>
