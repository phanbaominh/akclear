<main class="card shadow-xl bg-base-200 sm:w-1/2 m-auto">
  <div class="card-body">
    <header>
      <h1 class="card-title">Sign up</h1>
    </header>

    <div class="h-4"></div>
    <%= simple_form_for(@user, url: sign_up_path) do |form| %>
      <div>
        <%= form.input :email,
          autofocus: true,
          autocomplete: "email",
          label: false,
          placeholder: "Email",
          required: true,
          input_html: {
            class: "w-full"
          }
        %>
      </div>
      <div class="h-8"></div>
      <div>
        <%= form.input :password,
          required: true,
          autocomplete: "new-password",
          label: false,
          placeholder: "Password",
          input_html: {
            class: "w-full"
          }
        %>
      </div>
      <div class="h-8"></div>
      <div>
        <%= form.input :password_confirmation,
          required: true,
          autocomplete: "new-password",
          label: false,
          placeholder: "Password Confirmation",
          input_html: {
            class: "w-full"
          }
        %>
      </div>
      <div class="h-10"></div>
      <%= form.submit "Sign up", class: "simple_form__btn w-full" %>
    <% end %>

    <div class="text-center">
      <span>Already had an account?</span>
      <%= link_to "Sign in", sign_in_path, class: "text-blue-500" %>
    </div>
  </div>
</main>