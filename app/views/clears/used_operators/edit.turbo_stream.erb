<%= turbo_stream.update "operators__form_container" do %>
  <div class="hidden sm:block">
    <%= render Clears::UsedOperatorFormComponent.new(
      used_operator: @used_operator,
      submit_text: t(:update_operator),
      method: :patch
    ) %>
  </div>

<% end %>
<%= turbo_stream.remove "operators__new_operator_btn" %>
<%= turbo_stream.update dom_id(@used_operator.operator, :mobile) do %>
  <%= render Clears::UsedOperatorFormComponent.new(
    used_operator: @used_operator,
    submit_text: t(:update_operator),
    method: :patch,
    prefix_namespace: "mobile"
  ) %>
<% end %>
