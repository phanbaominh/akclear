<%= turbo_stream.remove dom_id(@used_operator.operator, :mobile) %>
<%= turbo_stream.remove @used_operator.operator %>
<%= turbo_stream.remove dom_id(@used_operator.operator, :basic) %>
<% if @is_destroy_editing_used_operator %>
  <%= turbo_stream.append "detailed_operators__list" do %>
    <% render Clears::Form::NewOperatorButtonComponent.new %>
  <% end %>
  <%= turbo_stream.append "basic_operators__list" do %>
    <%= render Clears::Form::NewOperatorButtonComponent.new %>
  <% end %>
<% end %>
<%= turbo_stream.update "clears__form__operators_fields" do %>
  <%= simple_fields_for @clear_spec do |f| %>
    <%= f.simple_fields_for :used_operators do |used_operator_form| %>
      <%= render Clears::UsedOperatorFieldsComponent.new(form: used_operator_form) %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.remove dom_id(
  UsedOperator.new,
                      "#{@used_operator.operator_id}_new"
                    ) %>
