<%= turbo_stream.append "operators__list" do %>
  <div id="<%= dom_id(@used_operator.operator) %>">
    <%= render Clears::UsedOperatorComponent.new(used_operator: @used_operator) %>
  </div>
  <%= render Clears::Form::NewOperatorButtonComponent.new %>
<% end %>
<%= turbo_stream.update "clears__form__operators_fields" do %>
  <%= simple_fields_for @clear_spec do |f| %>
    <%= f.simple_fields_for :used_operators do |used_operator_form| %>

      <%= render Clears::UsedOperatorFieldsComponent.new(form: used_operator_form) %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.update "operators__form_container" %>
