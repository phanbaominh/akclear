<% if @used_operator&.operator %>
  <%= turbo_stream.update @used_operator.operator do %>
    <%= render Clears::UsedOperatorComponent.new(used_operator: @used_operator) %>
  <% end %>
  <%= turbo_stream.update dom_id(@used_operator.operator, :mobile) do %>
    <%= render Clears::UsedOperatorComponent.new(used_operator: @used_operator) %>
  <% end %>
  <%= turbo_stream.update dom_id(@used_operator.operator, :basic) do %>
    <%= render Clears::UsedOperatorEditMiniComponent.new(used_operator: @used_operator) %>
  <% end %>
<% end %>
<%= render partial: 'new_btn', locals: { squad: @squad } %>
