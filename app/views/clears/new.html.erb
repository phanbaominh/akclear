<%= render Clears::FormComponent.new(clear_spec: @clear, new_form: true, job_id: @job&.id) do |component| %>
  <%= component.with_header do %>
    <% if @clear.errors.present? %>
      <ul class="alert alert-error">
        <% @clear.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
    <div>
      <h2 class="card-title">
        <%= t(:new_clear) %>
      </h2>
    </div>
  <% end %>
  <%= component.with_footer do %>
    <button form="clears__form" class="btn btn-primary js-only">
      <%= t(:create_clear) %>
    </button>
    <noscript>
      <%# In no js case, will submit a GET request with authenticity_token param in the URL => 
        undesired but should not cause any issue as Rails generate a new token per request 
        and also check for origin of request %>
      <button
        form="clears__form"
        formmethod="GET"
        formaction="<%= clears_stage_select_path %>"
        class="btn btn-primary"
      >
        <%= t(:select_stage) %>
      </button>
    </noscript>
  <% end %>
<% end %>
