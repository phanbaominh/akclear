<%= simple_form_for @used_operator, url: clears_used_operator_path, method: method, html: { class: 'card bg-base-200 shadow-xl' }, namespace: @used_operator.operator_id do |f| %>
  <%= f.input :operator_id, as: :hidden %>
  <div class="card-body">
    <div class="flex justify-between">
      <%= image_tag avatar, class: "w-16 h-16", alt: name %>

      <h2 class="card-title"><%= name %></h2>
    </div>

    <fieldset class="join block">
      <legend class="simple_form__label"><%= t("elite") %></legend>
      <%= f.collection_radio_buttons :elite, (max_elite + 1).times.to_a, :itself, :itself, item_wrapper_tag: nil, item_label_class: 'join-item btn' do |b| %>

        <%= vite_image_tag UsedOperatorPresenter.elite_image_url(b.value), class: "w-8" %>
        <%= b.radio_button %>
      <% end %>
    </fieldset>

    <fieldset class="join block">
      <legend class="simple_form__label"><%= t("skill") %></legend>
      <%= f.collection_radio_buttons :skill, (max_skill).times.to_a, :itself, :itself, item_wrapper_tag: nil, item_label_class: 'join-item btn' do |b| %>

        <%= image_tag UsedOperatorPresenter.skill_image_url(
          operator.skill_game_ids[b.value - 1]
        ),
        class: "w-8" %>
        <%= b.radio_button %>
      <% end %>
    </fieldset>
    <%= f.button :submit, submit_text, class: "mt-2" %>
  </div>
<% end %>
